{
  "private": true,
  "name": "test-fullstack",
  "version": "1.0.0",
  "repository": "https://github.com/Zhangdroid/test-fullstack.git",
  "license": "MIT",
  "workspaces": [
    "api",
    "web"
  ],
  "scripts": {
    "dev": "yarn dev:api & yarn dev:web",
    "dev:api": "yarn workspace api dev",
    "dev:web": "yarn workspace web dev",
    "test": "yarn test:api & yarn test:web",
    "test:api": "yarn workspace api test",
    "test:web": "yarn workspace web test"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@typescript-eslint/eslint-plugin": "^2.14.0",
    "@typescript-eslint/parser": "^2.14.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "husky": ">=1",
    "lint-staged": ">=8",
    "prettier": "1.19.1",
    "typescript": "^3.7.4"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "airbnb",
      "airbnb/hooks",
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:import/typescript",
      "prettier",
      "prettier/react",
      "prettier/@typescript-eslint"
    ],
    "rules": {
      "import/extensions": [
        "error",
        {
          "tsx": "never"
        }
      ],
      "@typescript-eslint/explicit-function-return-type": ["warn", {
        "allowExpressions": true
      }],
      "react/jsx-filename-extension": [
        "error",
        {
          "extensions": [
            ".tsx"
          ]
        }
      ],
      "react/prop-types": "off"
    }
  }
}
